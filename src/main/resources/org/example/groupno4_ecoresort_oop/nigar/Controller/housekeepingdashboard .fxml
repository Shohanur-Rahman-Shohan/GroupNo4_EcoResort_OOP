<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.groupno4_ecoresort_oop.nigar.housekeepingdashboard"
            prefHeight="720.0" prefWidth="1280.0">

    <Text layoutX="440.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text="Housekeeping Dashboard" wrappingWidth="400.0">
        <font>
            <Font size="34.0"/>
        </font>
    </Text>

    <Button layoutX="450.0" layoutY="150.0" text="Start Cleaning Task" onAction="#handleStartCleaningTask"
            prefWidth="380.0" prefHeight="40.0" style="-fx-font-size: 18px;" />
    <Button layoutX="450.0" layoutY="200.0" text="View Inventory" onAction="#handleViewInventory"
            prefWidth="380.0" prefHeight="40.0" style="-fx-font-size: 18px;" />
    <Button layoutX="450.0" layoutY="250.0" text="View Staff Schedule" onAction="#handleViewSchedule"
            prefWidth="380.0" prefHeight="40.0" style="-fx-font-size: 18px;" />
    <Button layoutX="450.0" layoutY="300.0" text="Handle Guest Requests" onAction="#handleGuestRequests"
            prefWidth="380.0" prefHeight="40.0" style="-fx-font-size: 18px;" />
    <Button layoutX="450.0" layoutY="350.0" text="Assign Cleaning Tasks" onAction="#handleAssignTasks"
            prefWidth="380.0" prefHeight="40.0" style="-fx-font-size: 18px;" />
    <Button layoutX="450.0" layoutY="400.0" text="Quality Control Report" onAction="#handleQualityControl"
            prefWidth="380.0" prefHeight="40.0" style="-fx-font-size: 18px;" />
    <Button layoutX="450.0" layoutY="450.0" text="Maintenance Issues" onAction="#handleMaintenance"
            prefWidth="380.0" prefHeight="40.0" style="-fx-font-size: 18px;" />
    <Button layoutX="450.0" layoutY="500.0" text="Daily Cleaning Reports" onAction="#handleDailyReports"
            prefWidth="380.0" prefHeight="40.0" style="-fx-font-size: 18px;" />

</AnchorPane>
